<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css" rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.js"></script>
</head>

<body id="style-1" class="bg-image mask-bg scrollbar" style="
    background-image: url('https://images.pexels.com/photos/1146134/pexels-photo-1146134.jpeg?h=1080&w=1920');
    overflow: visible;
    min-height: 100vh;
  ">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-lg-block">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">To Do!</a>
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarText"
                    aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarText">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Index" asp-controller="Home"><i
                                    class="fas fa-home fa-lg" style="color: #fbfbfb"></i></a>
                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <!--основной контент-->
    <div class="container text-white" style="padding-top: 2%;padding-bottom: 5%;overflow-y: auto;overflow-x: hidden;">
        @RenderBody()
    </div>
    <footer class="bg-dark fixed-bottom text-center text-white">
        <div class="text-center p-3">
            © 2024 ToDo App
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>

</html>