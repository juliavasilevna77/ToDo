@model Item

<h3>Are you sure you want to delete this item?</h3>
<div class="row gx-5 justify-content-start">
    <partial name="_TodoItemCard" model="Model" />
</div>
<form method="post">
    <div class="d-grid gap-2 col-1 mx-left" style="padding-top: 2%;">
        <button type="submit" class="btn btn-danger" style="margin-top: 2%;">Yes!</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="margin-top: 2%;">No</a>
    </div>

</form>
